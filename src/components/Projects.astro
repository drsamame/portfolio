---
import GitHub from "./icons/GitHub.astro"
import NextJS from "./icons/NextJS.astro"
import Tailwind from "./icons/Tailwind.astro"
import Vite from "./icons/vite.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"

const TAGS = {
  NEXT: {
    name: "React",
    class: "dark:text-white text-gray-800 px-3",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "dark:text-white text-gray-800",
    icon: Tailwind,
  },
  TS: {
    name: "TypeScript",
    class: "dark:text-white text-gray-800",
    icon: Vite,
  },
}
const PROJECTS = [
  {
    title: "Clon de google translate con ChatGPT",
    description:"Aplicación en React con TypeScript usando el api de chatGPT",
    link: "https://aspiring-behaviors.surge.sh/",
    github: "https://github.com/drsamame/typescript-chatgpt",
    image: "/projects/googletranslate.webp",
    tags: [TAGS.NEXT, TAGS.TAILWIND, TAGS.TS],
  },

  {
    title: "CRUD con Optimistic Updates",
    description:"Aplicación desarrollada en React Redux Toolkit, Tremor y Typescript",
    link: "https://complex-values.surge.sh/",
    github: "https://github.com/drsamame/crud-react-redux",
    image: "/projects/crud.png",
    tags: [TAGS.NEXT, TAGS.TS, TAGS.TAILWIND],
  },
  {
    title: "Tienda y Carrito con React",
    description:"Carrito de comrpas en React y typescript usando hooks de react como useContext, useReduce y custom Hooks",
    link: "https://firstt-home.surge.sh/",
    github: "https://github.com/drsamame/reducer-context",
    image: "/projects/reducer.webp",
    tags: [TAGS.NEXT, TAGS.TS],
  },
  
  {
    title: "Listado y Filtrado de Contactos",
    description:"Simulacro de prueba técnica en React y typescript usando hooks de react como useRef, useMemo y custom Hooks",
    link: "https://smooth-curtains.surge.sh/",
    github: "https://github.com/drsamame/todo-typescript",
    image: "/projects/agenda.png",
    tags: [TAGS.NEXT, TAGS.TS],
  }
]
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img class="object-cover object-top w-full h-56 transition duration-500 md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
      {title}
    </h3>
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row mb-2 gap-x-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>

      <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-4" />
              Code
              
            </LinkButton>
          )}
          {link && (
            <LinkButton href={link}>
              <Link class="size-3" />
              Preview
            </LinkButton>
          )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
  <div class="content-bottom flex justify-center">
    <a target="_blank"  href={'https://github.com/drsamame'} class="text-lg"> Ver más proyectos...</a>
  </div>

</div>



